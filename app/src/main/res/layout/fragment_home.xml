<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/i_yellow"
    android:backgroundTint="@color/i_yellow"
    android:gravity="center"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <Button
        android:id="@+id/homeLoginBtn"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/palatino"
        android:text="@string/btn_login"
        android:textAllCaps="false"
        android:textColor="@color/white"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateClickableBoundsCheck"
        tools:layout_editor_absoluteY="124dp" />

    <Button
        android:id="@+id/homeCalendarBtn"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/palatino"

        android:text="@string/btn_calendar"
        android:textAllCaps="false"
        android:textColor="@color/fontColor"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintBaseline_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="295dp" />

    <Button
        android:id="@+id/homeCateringBtn"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/palatino"
        android:text="@string/btn_catering"
        android:textAllCaps="false"
        android:textColor="@color/fontColor"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeLoginBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>