    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="1.0"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/paidOrderMenuLbl"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/paidOrderStatus" />-->

    <com.google.android.gms.maps.MapView
        android:id="@+id/paidOrderLocationMap"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/paidOrderLocationLbl"
        app:layout_constraintTop_toBottomOf="@+id/paidOrderLocationText"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/logoRose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/orderNrLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/palatino"
            android:text="@string/paidorder_ordernumber"
            android:textColor="@color/black"
            android:textSize="@dimen/global_textsize" />

        <TextView
            android:id="@+id/orderNr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/palatino"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="35099962050" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>