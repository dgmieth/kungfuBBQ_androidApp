<!--        app:layout_constraintTop_toBottomOf="@+id/paidOrderStatus" />-->

    <com.google.android.gms.maps.MapView
        android:id="@+id/paidOrderLocationMap"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/paidOrderLocationLbl"
        app:layout_constraintTop_toBottomOf="@+id/paidOrderLocationText"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>